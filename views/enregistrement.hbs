                                 <td>
                                      <label for="">    </small></label> 
                                 </td>
                                 <td>
                                      <label for="">    </small></label> 
                                 </td>
                                <td>
                                    <label for="f">Feminin</small></label> 
                                    <input type ="radio"  name="sexe"  value="feminin"/>
                                </td>
                            </tr> 
